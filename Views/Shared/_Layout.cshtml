<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Homebrew Hashing</title>
    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
            crossorigin="anonymous"
            asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.css"
            asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js" asp-fallback-href="~/lib/bootstrap/jquery/dist/jquery.min.js"></script>
    
    <link rel="stylesheet" href="~/css/site.css"/>
</head>
<body>
    <nav class="navbar navbar-light" id="myNav">
    <span class="navbar-brand mb-0 h1 inline navTitle">MAS256</span>
    <div class="inline">
        <form class="inline" action="/hash" method="get">
            <button class="myNavButton">Hash</button>
        </form>
        <form class="inline" action="/block" method="get">
            <button class="myNavButton">Block</button>
        </form>
        <form class="inline" action="/blockchain" method="get">
            <button class="myNavButton">Blockchain</button>
        </form>
        <form class="inline" action="/info" method="get">
            <button class="myNavButton">Info</button>
        </form>
    </div>
</nav>
    <div class="container body-content">
        @RenderBody()
    </div>
        
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.js"
                asp-fallback-test="window.jQuery">
        </script>
        
        
        <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
